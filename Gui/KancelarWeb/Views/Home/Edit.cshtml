@model KancelarWeb.Models.Udalost
@{
ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Edit</h1>

@using (Html.BeginForm("AddUdalost", "Home", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="View">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Nazev)
                    <label asp-for="Url" class="control-label"></label>
                    @Html.TextBoxFor(Model => Model.Nazev, new { @class = "form-control" })
                    <span asp-validation-for="Nazev" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(Model => Model.Datum)
                    <label asp-for="Url" class="control-label"></label>
                    <div class="input-group date" data-provide="datepicker">
                        @Html.TextBoxFor(Model => Model.Datum, new { @class = "form-control" })
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                    </div>


                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
  
}
<script type="text/javascript">
    $('.datepicker').datepicker();
</script>


