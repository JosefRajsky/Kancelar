@model KancelarWeb.ViewModels.Soucast

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Nový součást</h4>
<hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Soucast" asp-action="Add" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
                <input type="hidden" asp-for="SoucastIdId">
                <div class="form-group">
                    <label asp-for="Nazev" class="control-label"></label>
                    <input asp-for="Nazev" class="form-control" />
                    <span asp-validation-for="Nazev" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Zkratka" class="control-label"></label>
                    <input asp-for="Zkratka" class="form-control" />
                    <span asp-validation-for="Zkratka" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ParentId" class="control-label"></label>
                    <select asp-for="ParentId" class="form-control" asp-items="@ViewBag.SoucastList"></select>
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>                
               
                <div class="form-group">
                    <input type="submit" value="Uložit" url class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-default">Zpět na přehled</a>
    </div>

